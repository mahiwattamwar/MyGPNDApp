<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/set_profile_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/profile_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/colorPrimary">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/about_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="About"
            android:textColor="@android:color/black" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_status_et"
            android:layout_below="@+id/about_status_tv"
            android:inputType="text"
            android:hint="Enter Status"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/fname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_status_et"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="First Name"
            android:textColor="@android:color/black" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set_first_name"
            android:layout_below="@+id/fname_tv"
            android:inputType="text"
            android:hint="Enter First name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/lname_tv"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/set_first_name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set_last_name"
            android:layout_below="@+id/lname_tv"
            android:inputType="textMultiLine"
            android:hint="Enter Last Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            />

